<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112" fx:controller="sample.Controller">
    <left>
        <VBox prefHeight="288.0" prefWidth="196.0">
            <Label text="Item name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="itemName" prefHeight="25.0" prefWidth="183.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Quantity" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="quantity" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Due date" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="dueDate" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Customer Name" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="customerName" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Phone number" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Button fx:id="makeOrderButton" onAction="#onButtonClicked" text="Make order" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Label fx:id="error" textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        </VBox>
    </left>
    <center>

    </center>
</BorderPane>
