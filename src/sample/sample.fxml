<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112"
            fx:controller="sample.Controller">
    <left>
        <VBox prefHeight="288.0" prefWidth="196.0">
            <Label text="Item name"/>
            <TextField fx:id="itemName" prefHeight="25.0" prefWidth="183.0" GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>

            <Label text="Quantity"/>
            <TextField fx:id="quantity"/>

            <Label text="Due date"/>
            <DatePicker fx:id="dueDate"/>

            <Label text="Customer Name"/>
            <TextField fx:id="customerName"/>

            <Label text="Phone number"/>
            <TextField fx:id="phoneNumber"/>

            <Label text="Email"/>
            <TextField fx:id="email"/>

            <Button fx:id="makeOrderButton" onAction="#onButtonClicked" text="Make order"/>
            <Button fx:id="saveData" onAction="#saveToFile" text="Save orders"/>
            <Label fx:id="error" textFill="red"/>
        </VBox>
    </left>
    <center>

    </center>
</BorderPane>
